<font size="2">
<table class="tabelas"width="40%"align="center">
 <tr>
   <td colspan="2" align="left">
      <font  size=5 color="black"> <b> COMPUTADOR</b></font>
   </td>
 </tr>
 <tr>
   <td>
    <fieldset><legend><font  size=4> Dados Computador</font></legend>
    <table width="100%">
      <tr>
        <td align="left" width="20%"><b>Unidade:</b></td>
        <td align="left" colspan="2"><%=h @computadores.unidade.nome %></td>
      </tr>
      <tr>
        <td align="left"><b>Tipo:</b></td>
        <td align="left"colspan="2"><%=h @computadores.tipo_controle.nome %></td>
      </tr>
      <tr>
        <td align="left"><b>Configuração:</b></td>
        <td align="left"colspan="2"><%=h @computadores.config %></td>
      </tr>
      <tr>
        <td align="left"><b>Usuário:</b></td>
        <td align="left"colspan="2"><%=h @computadores.user %></td>
      </tr>
      <tr>
        <td align="left"><b>Quantidade:</b></td>
        <td align="left"colspan="2"><%=h @computadores.quant %></td>
      </tr>
       <%if @computadores.tipo_controle.nome == 'TERCEIROS'%>
          <tr>
            <td align="left"><b>Pertence:</b></td>
            <td align="left"colspan="2"><%=h @computadores.pertence %></td>
          </tr>
          <tr>
            <td align="left"><b>Contato:</b></td>
            <td align="left"colspan="2"><%=h @computadores.contato %></td>
          </tr>
          <tr>
            <td align="left"><b>Nº série:</b></td>
            <td align="left"colspan="2"><%=h @computadores.pat %></td>
         </tr>
      <%else%>
      <tr>
        <td align="left"><b>NºPatrimônio:</b></td>
        <td align="left"colspan="2"><%=h @computadores.pat %></td>
      </tr>
    <%end%>
    </table>
   </fieldset>
   <div class="botao">
    <table>
      <tr>
       <td align="left" width="4%"><%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"),  homes_path, {:method => "get"}, :title => "Voltar"%></td>
        <% if current_user.has_role?('administrador') or current_user.has_role?('estagiario SEDUC') %>
            <td align="left" width="4%" ><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_computadore_path(@computadores), :title => "Alterar Dados"%></td>
          <%end%>
       <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
      </tr>
     </table>
    </div>
   </td>
  </tr>
 </table>
</font>
