<font size="2">
<table  class="tabelas" width="100%"align="left">
 <tr>
   <td align="left">
     <font  size=5 color="black"> <b> ORDEM DE SERVIÇO INTERNO</b></font>
   </td>
</tr>
<tr>
  <td>
     <table>
       <tr>
         <td width="40%" valign="TOP">
           <%= render 'formshow' %>
         </td>
         <td width="60%">
           <fieldset><legend><font  size=4> Atendimento</font></legend>
           <% form_for(@chamados) do |f| %>
           <%= f.error_messages %>
            <table>
              <tr>
                <td align="left" width="20%"><b>Data Atendimento:</b></td>
                <td align="left"><%= f.date_select(:data_aten, :order => [:day, :month, :year], :start_year => (Date.today.year))%></td>
              </tr>
              <tr>
                <td align="left"><b>Funcionário:</b></td>
                <td align="left"><%= f.collection_select :estagiario_id, @estagiarios, :id, :nome, :include_blank => ' -- Selecione -- ', :size=> 20 %>
             </tr>
             <tr>
                <td align="left"><b>Tipo Problema:</b></td>
                <td align="left"><%= f.collection_select :tipos_problema_id, @tipos, :id, :tipo, :include_blank => ' -- Selecione -- '%>
            </tr>
            <tr>
               <td align="left"><b>Patrimônio:</b></td>
               <td align="left"><%= f.text_field :patrimonio, :size => 6  %>
                  <b>Local Atendimento:</b>
                  <%= f.select :local, LOCAL, :include_blank => '---Selecione---',  :size =>20  %>
               </td>
           </tr>
           <tr>
              <td align="left" valign="top"><b>Procedimentos executados:</b></td>
              <td align="left"><%= f.text_area :procedimentos, :cols =>"49", :rows => "5" %></td>
           </tr>
           <tr>
              <td align="left"><b>Situação Chamado:</b></td>
              <td align="left"><%= f.collection_select :situacao_chamado_id, @situacaos, :id, :situacao, :include_blank => ' -- Selecione -- '%>
           </tr>
           <tr>
             <td align="left"><b>Término:</b></td>
             <td align="left">    <%= f.date_select(:data_enc, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year + 5)) %><BR /></td><p>
           </tr>
           </table>
        </fieldset>
      </td>
      </tr>
        <table>
            <tr >
                <td align="left" width="6%">
                  <font size="4" color="red">
                  <div id='Certeza'>
                    <%= f.submit "Salvar" %>
                  </div>
                  </font>
                </td>
                <%end%>
               <td align="left" ><%= button_to 'OS', chamados_path, {:method => "get"}%></td>
             </tr>
         </table>

    </table>
  </td>
 </tr>
</table>
</font>
