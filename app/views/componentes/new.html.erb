<br/><br/>
<table class="tabelas" align="center" width="100%">
  <tr>
     <td colspan="2" align="left">
       <font  size=5 color="black"> <b>COMPONENTES</b></font>
    </td>
   </tr>
<tr>
  <td>
    <font  size="2">
     <table width="100%"  >
      <tr>
        <td width="50%" valign="top">
          <% form_for(@componentes) do |f| %>
            <fieldset><legend><font  size=4> Cadastrar Produtos</font></legend>
             <table>
               <tr>
                 <td  colspan="3" width="20%"align="left" ><b>Produto:</b>
                     <%= f.text_field :nome %>
                       <%= observe_field 'componente_nome',
                          :frequency => 0.1,
                          :update => "cadastrados",
                          :with => :tipo_nome,
                         :url => { :action => 'lista' } %>
                </td>
              </tr>
              <tr>
                   <div class="botao">
                   <td width="1%" align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
                   <div id='Certeza'>
                      <td width="1%"align="left"><input type="image" src="/stylesheets/images/salvar.png" title="Gravar"></td>
                   </div>
                   <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
                   <%end%>
                 </div>
              </tr>
             </table>
            </fieldset>
         </td>
         <td width="50%" valign="top">
             <fieldset><legend><font  size=4> Produtos Cadastrados</font></legend>
              <table width="100%">
               <tr>
                  <td align="left" valign="top">
                    <div id="cadastrados"></div>
                  </td>
               </tr>
              </table>
             </fieldset>
           </td>
      </tr>
     </table>
    </font>

  </td>
</table>
<br/>







