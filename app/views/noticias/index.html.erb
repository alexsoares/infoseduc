<h1>Noticias</h1>

<table width="80%" class="tabelas">
  <tr>
    <th>Titulo</th>
    <th>Apresentação da notícia</th>
    <th colspan="3">Administração</th>
  </tr>

<% @noticias.each do |noticia| %>
  <tr>
    <td><%=h noticia.titulo %></td>
    <td><%=h noticia.descricao_curta %></td>
    <td><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "25x25"), noticia, :title => "Exibir Notícia" %></td>
    <td><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_noticia_path(noticia), :title => "Atualizar Notícia"%></td>
    <td><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "25x25"), noticia, :confirm => 'Confirma Exclusao?', :method => :delete, :title => "Excluir Notícia" %></td>
  </tr>
<% end %>
  <tr>
    <td colspan="5" align="center"><%= will_paginate @noticias%></td>
  </tr>
</table>

<br />


<%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "25x25"), new_noticia_path, :title => "Nova Notícia"%>